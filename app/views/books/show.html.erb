<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render'userinfo', user: @user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @book.user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= current_user.name %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <a class="btn btn-sm btn-success", edit_book_path(book.id)>Edit</a>
              </td>
              <td>
                <a class="btn btn-sm btn-danger book_path(book.id), method: :delete">Destroy</a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>